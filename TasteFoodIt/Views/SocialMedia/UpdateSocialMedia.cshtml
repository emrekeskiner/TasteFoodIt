@model TasteFoodIt.Entities.SocialMedia
@{
    ViewBag.Title = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Sosyal Medya Güncelle</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Anasayfa</a></li>
            <li class="breadcrumb-item">Sosyal Medya</li>
            <li class="breadcrumb-item active" aria-current="page">Sosyal Medya İşlemleri</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <!-- Form Basic -->
            <div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Güncelleme Paneli</h6>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            @Html.HiddenFor(x => x.SocialMediaId)
                            @Html.HiddenFor(x => x.Status)
                            <label>Platform Adı</label>
                            @Html.TextBoxFor(x => x.PlatformName, new { @class = "form-control" })

                        </div>
                        <div class="form-group">
                            <label>Icon Url</label>
                            @Html.TextBoxFor(x => x.IconUrl, new { @class = "form-control" })

                        </div>
                        <div class="form-group">
                            <label>Hesap URL</label>
                            @Html.TextBoxFor(x => x.RedirectUrl, new { @class = "form-control" })

                        </div>
                        <button type="submit" class="btn btn-primary">Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>


</div>


