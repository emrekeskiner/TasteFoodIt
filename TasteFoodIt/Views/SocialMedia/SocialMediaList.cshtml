@model List<TasteFoodIt.Entities.SocialMedia>
@{
    ViewBag.Title = "SocialMediaList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Sosyal Medya Listesi</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Anasayfa</a></li>
            <li class="breadcrumb-item">Sosyal Medya</li>
            <li class="breadcrumb-item active" aria-current="page">Sosyal Medya Listesi</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- Simple Tables -->
            <div class="card">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary"><a href="/SocialMedia/CreateSocialMedia/" class="btn btn-sm btn-primary">SosyalMedya Ekle</a></h6>
                </div>
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th>ID</th>
                                <th>Platform Adı</th>
                                <th>Durum</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                string durum = "";
                                string durumYazi = "";
                                if (item.Status == false)
                                {
                                    durum = "bg-danger";
                                    durumYazi = "Pasif";
                                }
                                else
                                {
                                    durum = "bg-secondary";
                                    durumYazi = "Aktif";
                                }
                            <tr>
                                <td>@item.SocialMediaId</td>
                                <td>@item.PlatformName</td>
                                <td><a href="/SocialMedia/StatusChangeSocialMedia/@item.SocialMediaId"> <span class="badge @durum" style="color:white">@durumYazi</span></a></td>
                                <td><a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaId" class="btn btn-sm btn-danger">Sil</a></td>
                                <td><a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaId" class="btn btn-sm btn-success">Güncelle</a></td>
                            </tr>
                            }
                    </table>
                </div>
                <div class="card-footer"></div>
            </div>
        </div>
    </div>

</div>


