@model TasteFoodIt.Entities.Admin
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Profil Paneli</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Anasayfa</a></li>
            <li class="breadcrumb-item">Profil</li>
            <li class="breadcrumb-item active" aria-current="page">Profil Paneli</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <!-- Form Basic -->
            <div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary"><img class="img-profile rounded-circle text-primary" src="@Html.DisplayTextFor(x => x.ImageUrl)" style="max-width: 60px"> Kullanıcı Adı :
                    <span class="ml-2 d-none font-weight-bold d-lg-inline text-primary ">@Html.DisplayTextFor(x => x.Username)</span>
                    </h6>
                    
                </div>
                <div class="card-body">

                    <form method="post">
                        <div class="form-group">
                           
                            <label>Ad Soyad</label>
                            @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control", placeholder = "Ad Soyad" })
                        </div>
                        <div class="form-group">
                            <label>Profil Resmi</label>
                            @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control", placeholder = "Url Giriniz" })
                        </div>

                        @Html.HiddenFor(x => x.AdminId)
                       

                        <div class="form-group">
                            <label>Şifre</label>
                            @Html.TextBoxFor(x => x.Password, new { @class = "form-control", placeholder = "Şifre", type = "password" })
                        </div>

                        <button type="submit" class="btn btn-primary">Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>


</div>

