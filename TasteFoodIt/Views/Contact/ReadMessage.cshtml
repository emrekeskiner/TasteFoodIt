@model TasteFoodIt.Entities.Contact
@{
    ViewBag.Title = "ReadMessage";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Mesaj Listesi</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Anasayfa</a></li>
            <li class="breadcrumb-item">Mesajlar</li>
            <li class="breadcrumb-item active" aria-current="page">Mesaj Detay</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- Simple Tables -->
            <div class="card">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Mesajlar</h6>
                </div>
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <tbody>
                          
                            <tr><td><b>Adı Soyadı : </b>@Model.NameSurname</td></tr>
                            <tr><td><b>Başlık : </b>@Model.Subject</td></tr>
                            <tr><td><b>E-Mail : </b>@Model.Email</td></tr>
                            <tr><td><b>Tarih : </b>@(((DateTime)@Model.SendDate).ToString("dd.MM.yyyy"))</td></tr>
                            <tr><td><b>Mesaj : </b>@Model.Message</td></tr>
                            <tr> <td><h6 class="m-0 font-weight-bold text-primary"><a href="/Contact/MessageList/" class="btn btn-sm btn-primary">Mesaj Listesi</a></h6></td></tr>
                    </table>
                </div>
                <div class="card-footer"></div>
            </div>
        </div>
    </div>

</div>