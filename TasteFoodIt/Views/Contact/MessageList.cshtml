@model List<TasteFoodIt.Entities.Contact>
@{
    ViewBag.Title = "MessageList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Mesaj Listesi</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Anasayfa</a></li>
            <li class="breadcrumb-item">Mesajlar</li>
            <li class="breadcrumb-item active" aria-current="page">Mesaj Listesi</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- Simple Tables -->
            <div class="card">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Mesajlar</h6>
                </div>
                <div class="table-responsive p-3">
                    <table class="table align-items-center table-flush table-hover" id="dataTableHover">
                        <thead class="thead-light">
                            <tr>
                                <th>ID</th>
                                <th>Adı Soyadı</th>
                                <th>Başlık</th>
                                <th>E-Mail</th>
                                <th>Tarih</th>
                                <th>Durum</th>
                                <th>Detay</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                string durum = "";
                                string deger = "";
                                if (item.Status == false)
                                {
                                    durum = "bg-danger";
                                    deger = "Okunmadı";
                                }
                                else
                                {
                                    durum = "bg-secondary";
                                    deger = "Okundu";
                                }

                                <tr>
                                    <td>@item.ContactId</td>
                                    <td>@item.NameSurname</td>
                                    <td>@item.Subject</td>
                                    <td>@item.Email</td>
                                    <td>@(((DateTime)item.SendDate).ToString("dd.MM.yyyy"))</td>
                                    <td><span class="badge @durum" style="color:white">@deger</span></td>
                                    <td><a href="/Contact/ReadMessage/@item.ContactId" class="btn btn-sm btn-primary">Mesaj Detay</a></td>

                                </tr>
                            }
                    </table>
                </div>
                <div class="card-footer"></div>
            </div>
        </div>
    </div>

</div>

