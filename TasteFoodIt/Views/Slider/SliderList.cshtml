@model List<TasteFoodIt.Entities.Slider>
@{
    ViewBag.Title = "SliderList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Slider Listesi</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Anasayfa</a></li>
            <li class="breadcrumb-item">Sliders</li>
            <li class="breadcrumb-item active" aria-current="page">Slider Listesi </li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- Simple Tables -->
            <div class="card">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">
                        @if (ViewBag.sliderCount <3)
                        {
                            <a href="/Slider/CreateSlider/" class="btn btn-sm btn-primary">Slider Ekle</a>
                        }
                       
                                    </h6>
                </div>
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th>#</th>
                                <th>Başlık</th>
                                <th>Slogan</th>
                                <th>Açıklama</th>
                                <th>Resim</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.SliderId</td>
                                    <td>@item.Title</td>
                                    <td>@item.Slogan</td>
                                    <td>@item.Description</td>
                                    <td><img src="@item.ImageUrl" style="height:50px;width:50px;" class="rounded mx-auto d-block" alt="@item.ImageUrl"></td>
                                    <td><a href="/Slider/DeleteSlider/@item.SliderId" class="btn btn-sm btn-danger">Sil</a></td>
                                    <td><a href="/Slider/UpdateSlider/@item.SliderId" class="btn btn-sm btn-success">Güncelle</a></td>
                                </tr>
                            }
                    </table>
                </div>
                <div class="card-footer"></div>
            </div>
        </div>
    </div>

</div>

