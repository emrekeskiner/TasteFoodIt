@model List<TasteFoodIt.Entities.Reservation>
@{
    ViewBag.Title = "ReservationList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Rezervasyon Listesi</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Anasayfa</a></li>
            <li class="breadcrumb-item">Rezervasyonlar</li>
            <li class="breadcrumb-item active" aria-current="page">Rezervasyon Listesi</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- Simple Tables -->
            <div class="card">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary"><a href="/Reservation/CreateReservation/" class="btn btn-sm btn-primary">Rezervasyon Ekle</a></h6>
                </div>
                <div class="table-responsive p-3">
                    <table class="table align-items-center table-flush table-hover" id="dataTableHover">
                        <thead class="thead-light">
                            <tr>
                                <th>ID</th>
                                <th>Ad Soyad</th>
                                <th>E-mail</th>
                                <th>Telefon</th>
                                <th>Rezervasyon Tarihi</th>
                                <th>Saat</th>
                                <th>Kişi Sayısı</th>
                                <th>Drumu</th>
                                <th>İşlemler</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;

                                string durum = "";
                                string durumYazi = "";

                                switch (item.ReservationStatus)
                                {
                                    case "onaylandi":
                                        durum = "bg-primary";
                                        durumYazi = "Onaylandı";
                                        break;
                                    case "beklemede":
                                        durum = "bg-warning";
                                        durumYazi = "Bekliyor";
                                        break;
                                    case "iptal":
                                        durum = "bg-danger";
                                        durumYazi = "İptal";
                                        break;
                                    default:
                                        break;
                                }

                            <tr>
                                <td>@count</td>
                                <td>@item.Name</td>
                                <td>@item.Email</td>
                                <td>@item.Phone</td>
                                <td>@(((DateTime)item.ReservationDate).ToString("dd.MM.yyyy"))</td>
                                <td>@item.Time</td>
                                <td>@item.GuestCount</td>
                                <td> <span class="badge @durum" style="color:white">@durumYazi</span></td>
                                <td>
                                    <a href="/Reservation/AcceptReservation/@item.ReservationId" class="btn btn-sm btn-primary">Onayla</a>
                                    <a href="/Reservation/WaitReservation/@item.ReservationId" class="btn btn-sm btn-warning">Beklet</a>
                                    <a href="/Reservation/CancelReservation/@item.ReservationId" class="btn btn-sm btn-danger">İptal Et</a>
                                </td>
                               
                                <td><a href="/Reservation/UpdateReservation/@item.ReservationId" class="btn btn-sm btn-success">Güncelle</a></td>
                            </tr>
                            }
</table>
                </div>
                <div class="card-footer"></div>
            </div>
        </div>
    </div>

</div>

