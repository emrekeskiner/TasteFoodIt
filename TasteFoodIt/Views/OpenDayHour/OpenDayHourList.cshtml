@model List<TasteFoodIt.Entities.OpenDayHour>
@{
    ViewBag.Title = "OpenDayHourList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Çalışma Saati Listesi</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Anasayfa</a></li>
            <li class="breadcrumb-item">Çalışma Saati</li>
            <li class="breadcrumb-item active" aria-current="page">Çalışma Saati Listesi</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- Simple Tables -->
            <div class="card">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary"><a href="/OpenDayHour/CreateOpenDayHour/" class="btn btn-sm btn-primary">Açık Gün ve Saat Ekle</a></h6>
                </div>
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th>ID</th>
                                <th>Gün Adı</th>
                                <th>Saat Aralığı</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.OpenDayHourId</td>
                                    <td>@item.DayName</td>
                                    <td>@item.OpenHourRange</td>
                                    <td><a href="/OpenDayHour/DeleteOpenDayHour/@item.OpenDayHourId" class="btn btn-sm btn-danger">Sil</a></td>
                                    <td><a href="/OpenDayHour/UpdateOpenDayHour/@item.OpenDayHourId" class="btn btn-sm btn-success">Güncelle</a></td>
                                </tr>
                            }
                    </table>
                </div>
                <div class="card-footer"></div>
            </div>
        </div>
    </div>

</div>


