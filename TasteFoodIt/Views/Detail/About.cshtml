
@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/_DetailLayout.cshtml";
}



@Html.Action("PartialInfo", "Default")

<section class="ftco-section ftco-counter img" id="section-counter" style="background-image: url(/Templates/tasteit-master/images/bg_4.jpg);" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row d-md-flex align-items-center justify-content-center">
            <div class="col-lg-10">
                <div class="row d-md-flex align-items-center">
                    <div class="col-md d-flex justify-content-center counter-wrap ftco-animate">
                        <div class="block-18">
                            <div class="text">
                                <strong class="number" data-number="@ViewBag.reservationCount">0</strong>
                                <span>Rezervasyon Sayısı</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md d-flex justify-content-center counter-wrap ftco-animate">
                        <div class="block-18">
                            <div class="text">
                                <strong class="number" data-number="@ViewBag.messageCount">0</strong>
                                <span>Mesaj Sayısı</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md d-flex justify-content-center counter-wrap ftco-animate">
                        <div class="block-18">
                            <div class="text">
                                <strong class="number" data-number="@ViewBag.mailCount">0</strong>
                                <span>Mail Sayısı</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md d-flex justify-content-center counter-wrap ftco-animate">
                        <div class="block-18">
                            <div class="text">
                                <strong class="number" data-number="@ViewBag.testimonialCount">0</strong>
                                <span>Mutlu Müşteriler</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@Html.Action("PartialReservationNow", "Default")

