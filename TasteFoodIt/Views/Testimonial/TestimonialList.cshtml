@model List<TasteFoodIt.Entities.Testimonial>
@{
    ViewBag.Title = "TestimonialList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Referans Listesi</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Anasayfa</a></li>
            <li class="breadcrumb-item">Referanslar</li>
            <li class="breadcrumb-item active" aria-current="page">Referans Listesi</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- Simple Tables -->
            <div class="card">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary"><a href="/Testimonial/CreateTestimonial/" class="btn btn-sm btn-primary">Referans Ekle</a></h6>
                </div>
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th>ID</th>
                                <th>Adı Soyadı</th>
                                <th>Mesleği</th>
                                <th>Resim</th>
                                <th>Açıklama</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.TestimonialId</td>
                                    <td>@item.NameSurname</td>
                                    <td>@item.Title</td>
                                    <td><img src="@item.ImageUrl" style="height:50px;width:50px;" class="rounded mx-auto d-block" alt="@item.ImageUrl"></td>
                                    <td>@item.Description</td>
                                    <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-sm btn-danger">Sil</a></td>
                                    <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-sm btn-success">Güncelle</a></td>
                                </tr>
                            }
                    </table>
                </div>
                <div class="card-footer"></div>
            </div>
        </div>
    </div>

</div>


