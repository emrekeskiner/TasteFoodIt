@model TasteFoodIt.Entities.Product
@{
    ViewBag.Title = "UpdateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Ürün Güncelle</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Anasayfa</a></li>
            <li class="breadcrumb-item">Ürünler</li>
            <li class="breadcrumb-item active" aria-current="page">Ürün Güncelle</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <!-- Form Basic -->
            <div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Güncelleme Paneli</h6>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            @Html.HiddenFor(x=>x.ProductId)
                            @Html.HiddenFor(x=>x.IsActive)
                            <label>Ürün Adı</label>
                            @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })

                        </div>
                        <div class="form-group">
                            <label>Kategori</label>
                            @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>) ViewBag.category, new { @class = "form-control" })

                        </div>
                        <div class="form-group">
                            <label>Açıklama</label>
                            @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })

                        </div>
                        <div class="form-group">
                            <label>Fiyatı</label>
                            @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })

                        </div>
                        <div class="form-group">
                            <label>Resim Url</label>
                            @Html.TextAreaFor(x => x.ImageUrl, new { @class = "form-control" })

                        </div>

                        <button type="submit" class="btn btn-primary">Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>


</div>

